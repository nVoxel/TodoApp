  "templates": {
    "_template_lottie": {
      "type": "gif",
      "scale": "fit",
      "extensions": [
        {
          "id": "lottie",
          "params": {
            "$lottie_url": "lottie_url"
          }
        }
      ],
      "gif_url": "https://empty"
    },
    "_template_button": {
      "type": "text",
      "content_alignment_horizontal": "center",
      "border": {
        "$corner_radius": "corners"
