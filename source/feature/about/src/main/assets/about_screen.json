                  "width": {
                    "type": "fixed",
                    "value": 24,
                    "unit": "dp"
                  },
                  "actions": [
                    {
                      "log_id": "close_screen",
                      "url": "todo-action://close"
                    }
                  ]
                },
                {
                  "type": "separator",
                  "width": {
                    "type": "match_parent"
                  },
                  "height": {
                    "type": "fixed",
                    "value": 24
                  },
                  "delimiter_style": {
                    "color": "#00000000"
